@model IEnumerable<Stock>
@{
    ViewData["Title"] = "CurrentStockReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="alert alert-info" style="text-align: center;">Current Stock Report</h2>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-responsive table-hover">
        <thead>
            <tr>
                <th>Product</th>
                <th>Last Updated Date</th>
                <th>Unit</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.StockDate.ToString("dd/MM/yyyy")</td>
                <td>@item.UOM</td>
                <td>@item.Quantity</td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>No Record Found.</h4>
}



